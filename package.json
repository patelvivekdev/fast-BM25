{
  "name": "fast-bm25",
  "version": "0.0.4",
  "description": "High-performance BM25 implementation in TypeScript",
  "type": "module",
  "author": "Vivek Patel <me@patelvivek.dev>",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "Preserve",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "test": "vitest --run",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "ci": "bun run build && bun run check-format && bun run test",
    "prepublishOnly": "npm run build && npm test",
    "local-release": "changeset version && changeset publish"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.0",
    "@changesets/cli": "^2.27.9",
    "@types/bun": "^1.1.13",
    "@types/node": "^22.9.0",
    "prettier": "^3.3.3",
    "tsup": "^8.3.5",
    "vite-tsconfig-paths": "^5.1.2",
    "vitest": "^2.1.5"
  },
  "peerDependencies": {
    "typescript": "^5.6.3"
  },
  "keywords": [
    "bm25",
    "search",
    "information-retrieval",
    "ranking",
    "text-search",
    "okapi",
    "typescript"
  ],
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.cjs"
    }
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/patelvivekdev/fast-bm25",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patelvivekdev/fast-bm25.git"
  },
  "bugs": {
    "url": "https://github.com/patelvivekdev/fast-bm25/issues"
  },
  "dependencies": {
    "porter2": "^1.0.2"
  }
}
